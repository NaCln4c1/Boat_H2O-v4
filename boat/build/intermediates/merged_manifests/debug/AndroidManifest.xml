<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cosine.boat"
    android:versionCode="18"
    android:versionName="0.2.4" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="30" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_boat"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:testOnly="true"
        android:theme="@style/BoatTheme" >
        <activity
            android:name="cosine.boat.LauncherActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="android.max_aspect"
            android:value="4.0" />

        <service
            android:name="ru.ivanarh.jndcrash.NDCrashService"
            android:process=":reportprocess" />
        <service
            android:name="cosine.boat.logcat.LogcatService"
            android:process=":logcatprocess" />

        <activity
            android:name="cosine.boat.BoatClientActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreenTheme" >
            <meta-data
                android:name="android.app.lib_name"
                android:value="client" />
        </activity>
        <activity
            android:name="cosine.boat.AboutKr"
            android:label="@string/about"
            android:theme="@style/WowThemeNoActionBar" />
    </application>

</manifest>
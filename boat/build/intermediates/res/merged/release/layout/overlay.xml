<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<Button
		android:id="@+id/touch_pad"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="0dp"
		android:layout_marginTop="0dp"
		android:alpha="0.0" />

	<ImageView
		android:layout_height="16dp"
		android:layout_width="16dp"
		android:src="@drawable/cursor"
		android:id="@+id/mouse_cursor"/>

	<Button
		android:id="@+id/control_down"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:layout_marginLeft="60dp"
		android:layout_marginBottom="14dp"
		android:background="@drawable/shape1"
		android:text="@string/control_down"
		android:textSize="25sp" />

	<Button
		android:id="@+id/control_lshift"
		android:layout_width="110dp"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginStart="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginEnd="0dp"
		android:layout_marginRight="5dp"
		android:layout_marginBottom="35dp"
		android:background="@drawable/shape2"
		android:text="@string/control_shift"
		android:textColor="@color/black"
		android:textSize="20sp" />

	<Button
		android:textSize="20sp"
		android:id="@+id/control_inventory"
		android:background="@drawable/shape1"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_marginLeft="120dp"
		android:layout_marginBottom="14dp"
		android:text="@string/control_inventory"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"/>

	<Button
		android:textSize="25sp"
		android:id="@+id/control_up"
		android:background="@drawable/shape1"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_marginLeft="60dp"
		android:layout_marginBottom="122dp"
		android:text="@string/control_up"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"/>

	<Button
		android:textSize="25sp"
		android:id="@+id/control_left"
		android:background="@drawable/shape1"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_marginLeft="0dp"
		android:layout_marginBottom="68dp"
		android:text="@string/control_left"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"/>

	<Button
		android:id="@+id/control_right"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:layout_marginLeft="120dp"
		android:layout_marginBottom="68dp"
		android:background="@drawable/shape1"
		android:text="@string/control_right"
		android:textSize="25sp" />

	<Button
		android:id="@+id/control_jump"
		android:layout_width="110dp"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginRight="5dp"
		android:layout_marginBottom="95dp"
		android:background="@drawable/shape2"
		android:text="@string/control_jump"
		android:textSize="20sp" />

	<LinearLayout
		android:layout_width="270dp"
		android:layout_height="30dp"
		android:layout_marginBottom="0dp"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		android:layout_centerInParent="true"
		android:layout_centerHorizontal="true"
		android:alpha="0.2"
		android:id="@+id/item_bar"
		android:visibility="invisible"
		android:weightSum="9.0">

		<Button
			android:textSize="20sp"
			android:id="@+id/control_1"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_2"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_3"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_4"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_5"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_6"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_7"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_8"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_9"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

	</LinearLayout>

	<Button
		android:textSize="20sp"
		android:id="@+id/mouse_primary"
		android:background="@drawable/shape1"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:text="@string/mouse_primary"
		android:layout_marginLeft="0dp"
		android:layout_marginBottom="122dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"/>

	<Button
		android:textSize="20sp"
		android:id="@+id/mouse_secondary"
		android:background="@drawable/shape1"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:text="@string/mouse_secondary"
		android:layout_marginLeft="120dp"
		android:layout_marginBottom="122dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"/>

	<Button
		android:textSize="20sp"
		android:id="@+id/control_command"
		android:background="@drawable/shape1"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_marginLeft="60dp"
		android:layout_marginTop="0dp"
		android:text="@string/control_command"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"/>

	<Button
		android:id="@+id/control_chat"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="120dp"
		android:layout_marginTop="0dp"
		android:background="@drawable/shape1"
		android:text="@string/control_chat"
		android:textSize="20sp" />

	<Button
		android:textSize="20sp"
		android:id="@+id/control_3rd"
		android:background="@drawable/shape1"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_marginLeft="180dp"
		android:layout_marginTop="0dp"
		android:text="@string/control_thirdperson"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"/>

	<Button
		android:textSize="20sp"
		android:id="@+id/esc"
		android:background="@drawable/shape1"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_marginLeft="0dp"
		android:layout_marginTop="0dp"
		android:text="@string/esc"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"/>

	<Button
		android:id="@+id/keyboard"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="0dp"
		android:layout_marginTop="60dp"
		android:background="@drawable/shape1"
		android:text="@string/control_keyboard"
		android:textSize="20sp" />

	<EditText
		android:id="@+id/input_scanner"
		android:layout_width="84dp"
		android:layout_height="55dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_marginTop="0dp"
		android:layout_marginRight="0dp"
		android:alpha="1"
		android:background="@drawable/shape1"
		android:ems="10"
		android:inputType="text"
		android:singleLine="true"
		android:text=" &gt;"
		android:textSize="25sp" />

	<include
		layout="@layout/allkeyboard"
		android:layout_width="wrap_content"
		android:layout_height="match_parent" />


</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_primary"
        app:title="@string/about"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/zwf0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="195dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_boat" />


    <TextView
        android:id="@+id/zwf0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="BoatKr"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/web_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/web"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:onClick="gw"
        android:text="BoatKr官网"
        android:textSize="20dp" />

    <Button
        android:id="@+id/version_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/version"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:onClick="js"
        android:text="版本介绍"
        android:textSize="20dp" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/update"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:onClick="gx"
        android:text="版本更新"
        android:textSize="20dp" />

    <Button
        android:id="@+id/agree_button"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:drawableLeft="@drawable/agree"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:onClick="xy"
        android:layout_height="wrap_content"
        android:text="用户协议" />

    <Button
        android:id="@+id/thank_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mx"
        android:background="@color/white"
        android:drawableLeft="@drawable/thank"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:drawablePadding="10dp"
        android:text="特别鸣谢" />

    <TextView
        android:id="@+id/zwf2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/zwf3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/zwf4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/zwf5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/zwf6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/zwf9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Copyright © 2020 Vindows95. All Rights Reserved. " />


</LinearLayout>




